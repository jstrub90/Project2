<main>
    <div class="container-fluid but-fixed">
        <div class="row d-flex justify-content-center mt-4">
            <div class="col-md-10 col-lg-8">
                <div class="card border-0">
                    <h5 class="card-header">Post a Gig</h5>
                    <div class="card-body">
                        <form id="post-gig-form" action="#" method="POST">
                            <div class="form-group">
                                <label for="gig-title">Gig Title</label>
                                <input type="text" class="form-control" id="gig-title" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label for="gig-description">Tell Us What You Need</label>
                                <textarea class="form-control" id="gig-description" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="gig-date">Date Needed?</label>
                                <input type="date" class="form-control" id="gig-date">
                            </div>
                            <div class="form-group">
                                <label for="gig-amount">Amount Offered</label>
                                <input type="text" class="form-control" id="gig-amount">
                            </div>
                            <div class="form-group">
                                <label for="gig-location">What City Are You Located In?</label>
                                <input type="text" class="form-control" id="gig-location" placeholder="Location">
                            </div>
                            <div class="form-group">
                                <label for="gig-category">Gig Category</label>
                                <div class="form-group">
                                    <select class="form-control" id="gig-category">
                                        <option>Manual Labor</option>
                                        <option>Education</option>
                                        <option>Tech</option>
                                        <option>Household</option>
                                        <option>Entertainment</option>
                                        <option>Miscellaneous</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group d-flex justify-content-end mb-0">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
